/* pages/confirmOrder/confirmOrder.wxss */

.main {
    background: linear-gradient(#087ce9, #fff);
    height: 250px;
}

.recive_address {
    margin-bottom: 30px;
}

.arr_time {
    margin: 10px;
}

.arr_time-line {
    height: 45px;
    line-height: 45px;
    vertical-align: middle;
    padding-left: 10px;
}

.font-set {
    font-size: 16px;
    font-weight: 700;
}

.food-block {
    margin: 10px;
}

.food-line {
    height: 45px;
    line-height: 45px;
    vertical-align: middle;
    padding-left: 10px;
}

.food-line-block {
    height: 100px;
}

.extra-block {
    margin: 10px;
}

.fix-bottom {
    width: 100%;
    height: 90px;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #505050;
}

.fix-botton-bottom {
    height: 40px;
    width: 100px;
    position: fixed;
    bottom: 44px;
    right: 5px;
    background: #12e752da;
    border-radius: 5px;
    line-height: 40px;
    text-align: center;
}

.food-item-1,.food-item-2{
    height: 28%;
    overflow: hidden;
    width: 20%;
    margin-left: 10px;
}
