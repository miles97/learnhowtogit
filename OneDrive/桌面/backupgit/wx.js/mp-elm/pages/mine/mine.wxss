page {
    background: #dddcdc71;
}

.main {
    padding: 0;
    margin: 0;
    height: 100%;
    width: 100%;
}

.imageD {
    width: 100%;
    height: 100%;
    display: inline-block;
    vertical-align: middle;
}

.right-block {
    width: 33%;
    float: left;
    text-align: center;
    margin-top: 20rpx;
}

.right-block-two {
    width: 49%;
    float: left;
    text-align: center;
    margin-top: 20rpx;
}

.head_top {
    /* width: 100%;
    height: 300rpx;
    border: 1px solid #000;
    margin-bottom: 10rpx; */
}
.rating_header_right{
    width: 95%;
    overflow: hidden;
    padding-bottom: 20px;
    background-color: #fff;
    margin: 10rpx;
    border-radius: 20rpx;
}
.detail_charts{
    padding-left:60rpx;
    background-color:#fff;
    line-height:91rpx;
    margin:28rpx;
    border-radius:20rpx;
}
.detail_charts image{
    width: 45rpx;
    height: 45rpx;
    float: right;
    padding-right: 20rpx;
    padding-top:25rpx;
}
.nutrition_contain{
    margin-left: 20rpx;
}
.fix_icon{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    position: fixed;
    right: 20px;
    bottom: 20px;
    text-align: center;
    vertical-align: middle;
    line-height: 50px;
    background-color: #000;
    color: #fff;
    font-size: 1.5rem;
}
.error-msg{
    margin: 15rpx;
    /* background: #fff; */
    border-radius: 10rpx;
    line-height: 60rpx;
    /* height: 200rpx; */
}
.img{
    width: 70px;
    height: 70px;
    display: block;
    float: left;
    box-shadow: 2px 2px 2px;
    margin-left: 10px;
    margin-top: 15px;
}
.single-shop-item {
    width: auto;
    height: 110px;
    margin-top: 10px;
    background: #fff;
    /* overflow: hidden; */
    border-radius:12px;

}

.itself {
    height: 20px;
    width: 30%;
    padding: 0 0 10px 10px;
    float: right;
    margin-right: 148px;
    overflow: hidden;
    font-weight: 800;
}

.more {
    overflow: hidden;
    width: 240px;
    height: auto;
    float: left;
    margin-left: 20px;
}

text {
    max-width: 110px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow-x: hidden;
}