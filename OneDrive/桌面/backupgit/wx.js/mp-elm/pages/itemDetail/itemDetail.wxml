<!--pages/itemDetail/itemDetail.wxml-->
<view class="main color-white">
  <!-- 头部商家详情页 -->
  <view class='detail-top'>
    <!--image  -->
    <image src="../../images/jifen.jpeg"></image>
    <view class='font-first'><text class='font-2'>{{itemDetail.shopname}}</text></view>
    <view class='font-second'>
      <text class='font-3'>{{itemDetail.intro}}</text>
      <view></view>
      <text class='font-3'>{{itemDetail.exintro}}</text>
    </view>

  </view>

  <!-- 商品/评价切换tap -->
  <view class='change-show-type detail-second'>
    <view bindtap='changeshowitem' class="away">商品</view>
    <view bindtap='changeshowscore' class="away">评价</view>
  </view>

  <!-- item项目列表，显示商家或者评价页面 -->
  <view wx:if="{{itemChoose}}" class='detail-thrid'>
    <view wx:for="{{what}}" wx:for-index="index" wx:key="index" class='wall-list' bingtap='chooseMenuList'>
      <text>{{itemDetail.wall}}</text>
      <text class='category_num'>{{categoryNum[index]}}</text>
    </view>

    <view wx:if="{{showMenu}}">
      <view class='list-right' wx:for-index="index" wx:for="{{foods}}" wx:key="index">
        <!-- <view class='img_place'>
          <image></image>
        </view> -->
        <view class='food-intern'>
          <text class='font-1'>{{foods.name}}</text>
          <!-- <view wx:for="{{foods}}" wx:for-index="index" wx:key="index">
          用来新品icon的绘图
          </view> -->
          <text class='description'>{{foods.description}}</text>
        </view>
        <view class='footer-count'>
          <text>￥</text>
          <text>{{foods.specfoods[0].price}}</text>

        </view>
      </view>

    </view>

    <!-- footer，底栏结算区域 -->
    <view class='footer-bottom' bingtap="gotoConfirm">
      <!-- <view class='shopcart'>
        <image></image>
      </view> -->
    </view>

    <!--toggle购物车显示 -->
    <view wx:if="{{showCartList&&cartFoodList.length}}" class='cart_food_list'>
      <text>购物车</text>
      <view class='clear_cart'>清空</view>
    </view>

    <view class='cart_food_details'>
      <view class='cart_food' wx:for="cartFoodList" wx:for-index="index" wx:key="index">
        <view class='cart_list_num'>
          <text class='ellipsis'>{{item.name}}</text>
          <text class='ellipsis'>{{item.speace}}</text>
        </view>

        <view class='cart_list_price'>
          <text>￥</text>
          <text>{{item.price}}</text>
        </view>

      </view>
    </view>


  </view>
  <!-- end of itemChoose -->


  <!-- 评分score页面 -->
  <view class='rating_container' wx:if="{{showScore}}">
    <view class="rating_head">
      <text class='font-3'>综合评价:</text>
      <text class='font-3 color-orange'>{{shopDetailData.rating}}</text>
      <view></view>
      <text class='font-3'>高于周边商家:</text>
      <text class='font-3 color-orange'>{{shopDetailData.damn}}%</text>
    </view>
    <view class='rating_header_right'>
      <view class='right-block'>
      <text>服务态度:</text>
      <view class='rating_num color-orange'>{{ratingScoresData.service_score}}</view>
      </view>
       <view class='right-block'>
      <text>菜品评价:</text>
      <view class='rating_num color-orange'>{{ratingScoresData.food_score}}</view>
      </view>
       <view class='right-block'>
      <text>送达时间:</text>
      <view class='rating_num color-orange'>{{ratingScoresData.order_lead_time}}<text>分钟</text></view>
   </view>
    </view>
  </view>

  <!-- mask 遮罩层 -->
  <view class='mask' hidden="{{showCartList}}" bindtap="isCloseCart"></view>

</view>