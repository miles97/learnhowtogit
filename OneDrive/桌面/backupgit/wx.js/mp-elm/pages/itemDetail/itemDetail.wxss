/* pages/itemDetail/itemDetail.wxss */
page{
  background-color: #f5f5f5;
}
.detail-top{
  width: 100%;
  height: 100px;
  /* overflow: hidden; */
  background: #3190e8;
  opacity: .5;
  color: #fff;
}
.detail-top image{
  width:20%;
  height: 70px;
  float: left;
}
.font-first{
  float: left;
  width: 78%;
}
.font-second{
  float: left;
  width: 78%;
}
.detail-second{
  width: 100%;
  height: 30px;
  background-color: rgba(24, 20, 20, 0.295);
  opacity: .5;
  color: rgb(71, 67, 67);
  margin-top: 1%;
}
.away{
  display: inline-block;
  text-align: center;
  width:48%;
  margin: 1%;
}
.active{
  background-color: #fff;
  color: #161616;
  font-weight: 700;
}

.rating_container{
  width: 100%;
  background: #7de68e;
  opacity: .5;
  color: #fff;
  margin-top: 1%;
  overflow: hidden;
  height: 100%;
}
.rating_head{
  text-align: center;
}
.right-block{
  width: 30%;
  float: left;
  text-align: center;
}
.detail-thrid{
  width: 100%;
  background: #fff;
  margin-top: 1%;
  overflow: hidden;
  height: 100%;
}
.menu_left{
  width: 3.8rem;
  height: 100%;
  float: left;
}

.menu_left_li{
  width: 3.8rem;
  padding: .7rem .3rem;
  border-bottom: 0.025rem solid #ededed;
  box-sizing: border-box;
  border-left: 0.15rem solid #f8f8f8;
  position: relative;
}
.left_active{
  border-left: 0.15rem solid #3190e8;
  background-color: #fff;
  font-weight: bold;
}
.menu_left_li  text{
  color:#666;
  font-size:.6rem;
}
  
