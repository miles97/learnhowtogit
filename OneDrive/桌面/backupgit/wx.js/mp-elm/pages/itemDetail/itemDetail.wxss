.menu_right{
  width: 16rem;
  height: 100%;
  float: left;
}
.menu_detail_header{
  border: 1px solid red;
  width: 100%;
  padding: .4rem;
}
.menu_detail_header_left{
  width: 11rem;
  white-space: nowrap;
  overflow: hidden;
}
.menu_detail_list{
  background-color: #fff;
  padding: .6rem .4rem;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
  overflow: hidden;
}
.food_description_content{
  font-size:.5rem;
  color:#999;
  line-height: .6rem;
}
 .food_description_sale_rating{
  line-height: .8rem;
}
food_description_sale_rating text{
  font-size:.5rem;
  color: #333;
}
.menu_detail_footer{
  margin-left: 2.4rem;
  font-size: 0;
  margin-top: .3rem;
}
.food_price text:nth-of-type(1){
  font-size:.5rem;
  color:#f60;
  margin-right: .05rem;
  }
.food_price text:nth-of-type(2){
  font-size:.7rem;
  color:#f60;
  font-weight: bold;
  margin-right: .3rem;
}
.food_price text:nth-of-type(3){
  font-size:.5rem;
  color:#666;
}