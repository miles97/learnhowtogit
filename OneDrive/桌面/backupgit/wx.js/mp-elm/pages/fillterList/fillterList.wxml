<!--Search.wxml-->
<view class='search_page'>

    <form class='search_form'>
        <input type='search' name="search" placeholder="请输入商家或美食名称" class="search_input" bindinput='shopNameInput'></input>
        <button type="submit" name="submit" class="search_submit" bindtap='gotosearch'>search</button>
    </form>

    <view wx:for="{{searchList}}" wx:key="value">
        <view class='single-shop-item' bindtap='gotoFiveStore' data-value="{{item.id}}" data-name="{{item.name}}">
            <view class='itself'>{{item.name}}</view>
            <view class='more'>
                <text>{{item.address}}</text>
                <view>
                    <text>{{item.distance}}</text>
                </view>

                <view>
                    <text>{{item.piecewise_agent_fee.tips}}</text>
                </view>
            </view>

        </view>
        <view wx:if="{{!item}}">抱歉，没找到喔</view>
    </view>

    <view wx:if="{{extromessage}}">{{extromessage}}</view>

</view>