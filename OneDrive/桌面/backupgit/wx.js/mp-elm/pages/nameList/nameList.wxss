/* pages/nameList/nameList.wxss */

.main {
  color: #fff;
  font-size: 36rpx;
}

.head-top {
  width: 100%;
  height: 100rpx;
  position: relative;
}
.head-top image{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}
.center-name{
  margin-left: 40%;
  margin-top: 30rpx;
  display: inline-block;
}

.head-top view:last-child {
  position: absolute;
  top: 30rpx;
  right: 10rpx;
}

.majoy-head{
  height: 400rpx;
  width: 100%;
}

.single-majoy{
  height: 50rpx;
  width: 40rpx;
}