page{
    background-color: rgba(166, 212, 243, 0.555);
}
.page-section-gap {
    box-sizing: border-box;
}
.btn-area{
    margin-top: 20px;
    border-top: 1px solid #fff;
}
.page-body-button {
    width: 100%;
    height: 40px;
    overflow-x: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border-bottom: 1px solid #fff;
    padding-left: 5px;
    padding-top: 5px;
}
button {
    color: #fff;
}
.location_icon{
    background: rgb(146, 144, 144);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    position: absolute;
    top: 225px;
    right: 25px;
    text-align: center;
}
.location_icon image{
    width: 30px;
    height: 30px;
    margin-top: 5px;
}
